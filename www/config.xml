    <splash src="img/splashes-icons/xhdpi.9.png"   platform="android" qualifier="xxhdpi" />           <!-- Android -->
    <splash src="img/splashes-icons/320X426.png"                      width="320"  height="426" />
    <splash src="img/splashes-icons/320X470.png"                      width="320"  height="470" />
    <splash src="img/splashes-icons/320X480.png"   platform="ios"     width="320"  height="480" />    <!-- iPhone 3 -->
    <splash src="img/splashes-icons/480X640.png"   platform="ios"     width="480"  height="640" />
    <splash src="img/splashes-icons/640X960.png"                      width="640"  height="960" />    <!-- iPhone 4 (2x) -->
