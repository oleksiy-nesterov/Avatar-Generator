<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:gap="http://phonegap.com/ns/1.0" id="com.webmotoric.avatar-generator" version="{{version}}">
    <name>The Avatar Generator</name>
    <description>App allows you generate your own user picture.</description>
    <author href="http://avatar-generator.appspot.com" email="oleksiy.nesterov+avatar@gmail.com">Webmotoric</author>

    <icon src="icon.png" />
    <icon src="img/splashes-icons/29.png"   width="29"   height="29"   platform="ios" />
    <icon src="img/splashes-icons/40.png"   width="40"   height="40"   platform="ios" />
    <icon src="img/splashes-icons/50.png"   width="50"   height="50"  />
    <icon src="img/splashes-icons/57.png"   width="57"   height="57"   platform="ios" />
    <icon src="img/splashes-icons/58.png"   width="58"   height="58"  />
    <icon src="img/splashes-icons/60.png"   width="60"   height="60"  />
    <icon src="img/splashes-icons/72.png"   width="72"   height="72"   platform="ios" />
    <icon src="img/splashes-icons/76.png"   width="76"   height="76"  />
    <icon src="img/splashes-icons/80.png"   width="80"   height="80"  />
    <icon src="img/splashes-icons/87.png"   width="87"   height="87"   platform="ios" />
    <icon src="img/splashes-icons/100.png"  width="100"  height="100" />
    <icon src="img/splashes-icons/114.png"  width="114"  height="114"  platform="ios" />
    <icon src="img/splashes-icons/120.png"  width="120"  height="120" />
    <icon src="img/splashes-icons/144.png"  width="144"  height="144"  platform="ios" />
    <icon src="img/splashes-icons/152.png"  width="152"  height="152" />
    <icon src="img/splashes-icons/167.png"  width="167"  height="167"  platform="ios" />
    <icon src="img/splashes-icons/180.png"  width="180"  height="180" />
    <icon src="img/splashes-icons/512.png"  width="512"  height="512"  platform="ios" />
    <icon src="img/splashes-icons/1024.png" width="1024" height="1024" platform="ios" />    
    
    <icon src="img/splashes-icons/36.png"   width="36"   height="36"   platform="android" density="ldpi" />
    <icon src="img/splashes-icons/48.png"   width="48"   height="48"   platform="android" density="mdpi" />
    <icon src="img/splashes-icons/72.png"   width="72"   height="72"   platform="android" density="hdpi" />
    <icon src="img/splashes-icons/96.png"   width="96"   height="96"   platform="android" density="xhdpi" />
    <icon src="img/splashes-icons/144.png"  width="144"  height="144"  platform="android" density="xxhdpi" />

    <splash src="img/splashes-icons/Default@2x~universal~anyany.png" platform="ios" />
    <splash src="img/splashes-icons/Default@3x~universal~anyany.png" platform="ios" />
    <splash src="img/splashes-icons/ldpi.9.png"  density="ldpi"      platform="android" />        <!-- Android 200x320 -->
    <splash src="img/splashes-icons/ldpi.9.png"  density="mdpi"      platform="android" />        <!-- Android 320x480 -->
    <splash src="img/splashes-icons/hdpi.9.png"  density="hdpi"      platform="android" />        <!-- Android 480x800 -->
    <splash src="img/splashes-icons/xhdpi.9.png" density="xhdpi"     platform="android" />        <!-- Android 720px1280 -->
    <splash src="img/splashes-icons/xhdpi.9.png" density="xxhdpi"    platform="android" />        <!-- Android -->

    <preference name="phonegap-version" value="cli-8.0.0" />
    <platform name="ios" />
    <platform name="android" />
    
    <!-- GENERAL PREFERENCES -->
    <content src="index.html" />
    <preference name="fullscreen" value="false" />    
    <preference name="AndroidPersistentFileLocation"    value="Internal" />
    <preference name="iosPersistentFileLocation"        value="Library" />
    <preference name="android-build-tool"               value="gradle" />
    <preference name="fullscreen"                       value="false" />
    <preference name="orientation"                      value="portrait" />
    <preference name="autorotate"                       value="false" readonly="true" />
    <preference name="target-device"                    value="universal" />
    <preference name="backgroundcolor"                  value="0xffffffff" />

    <feature name="WebViewColor"><param name="ios-package" value="WebViewColor" /></feature>

    <!-- OTHER PREFERENCES -->
    <preference name="webviewbounce"                    value="false" />
    <preference name="prerendered-icon"                 value="true" />
    <preference name="detect-data-types"                value="false" />
    <preference name="stay-in-webview"                  value="false" />
    <preference name="exit-on-suspend"                  value="false" />
    
    <preference name="AutoHideSplashScreen"             value="false" />
    <preference name="SplashScreenDelay"                value="20000" />
    <preference name="SplashShowOnlyFirstTime"          value="true" />
    <preference name="SplashScreenBackgroundColor"      value="#ffffff" />
    <preference name="FadeSplashScreenDuration"         value="500" />
    <preference name="FadeSplashScreen"                 value="true"/>
    <preference name="ShowSplashScreenSpinner"          value="false" />

    <preference name="EnableViewportScale"              value="false" />
    <preference name="MediaPlaybackRequiresUserAction"  value="false" />
    <preference name="AllowInlineMediaPlayback"         value="true" />
    <preference name="DisallowOverscroll"               value="true" />
    <preference name="UIWebViewBounce"                  value="false" />
    <preference name="AlternateContentSrc"              value="index.html" />
    
    <preference name="StatusBarOverlaysWebView"         value="false" />
    <preference name="StatusBarStyle"                   value="black-opaque" />
    <preference name="StatusBarBackgroundColor"         value="#ff4242" />
    
    <feature name="StatusBar"><param name="ios-package" value="CDVStatusBar" onload="true" /></feature>
    
    <!-- CORE PLUGINS -->
    <plugin name="cordova-plugin-device"                source="npm" />
    <plugin name="cordova-plugin-dialogs"               source="npm" />
    <plugin name="cordova-plugin-splashscreen"          source="npm" />
    <plugin name="cordova-plugin-whitelist"             source="npm" spec="1.0.0" />
    <plugin name="cordova-base64-to-gallery"            source="npm" spec="3.0.0" />
    <plugin name="cordova-plugin-statusbar"             source="npm" spec="2.2.0" />
    <plugin name="cordova.plugins.diagnostic"           source="npm" />
    
    <edit-config file="*-Info.plist" target="UIStatusBarHidden" mode="merge"><true /></edit-config>
    <edit-config file="*-Info.plist" target="UIViewControllerBasedStatusBarAppearance" mode="merge"><false /></edit-config>
    <edit-config file="*-Info.plist" target="NSPhotoLibraryUsageDescription" mode="merge"><string>Granting The Avatar Generator access to your photos will allow you to save your artwork.</string></edit-config>
    <edit-config file="*-Info.plist" target="NSPhotoLibraryAddUsageDescription" mode="merge"><string>Granting The Avatar Generator access to your photos will allow you to save your artwork.</string></edit-config>
    <edit-config file="AndroidManifest.xml" target="/manifest/application" mode="merge"><application android:debuggable="false" android:largeHeap="true" android:hardwareAccelerated="true"></application></edit-config>

    <allow-intent href="*" />
    <allow-navigation href="*" />
    <access origin="*" />
    <access origin="cdvfile:*" launch-external="yes" />
    <access origin="content:*" launch-external="yes" />
</widget>