    <icon src="img/splashes-icons/152.png" width="152" height="152" />
    <icon src="img/splashes-icons/180.png" width="180" height="180" />
    <icon src="img/splashes-icons/36.png"  width="36"  height="36"  platform="android" qualifier="ldpi" />
    <icon src="img/splashes-icons/48.png"  width="48"  height="48"  platform="android" qualifier="mdpi" />
    <icon src="img/splashes-icons/72.png"  width="72"  height="72"  platform="android" qualifier="hdpi" />
    <icon src="img/splashes-icons/96.png"  width="96"  height="96"  platform="android" qualifier="xhdpi" />
