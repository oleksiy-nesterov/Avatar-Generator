<widget xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:gap="http://phonegap.com/ns/1.0" id="com.webmotoric.avatar-generator" version="1.0.0">
    <name>The Avatar Generator</name>
    <description>Allow you generate your own avatar.</description>
    <author href="http://avatar-generator.appspot.com" email="oleksiy.nesterov+m@gmail.com">Oleksiy Nesterov, Webmotoric</author>

