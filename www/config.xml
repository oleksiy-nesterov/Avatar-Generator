    <platform name="ios" />
    <platform name="android" />

    <!-- GENERAL PREFERENCES -->
    <platform name="ios"><preference name="phonegap-version" value="cli-5.2.0" /></platform>
    <platform name="android"><preference name="phonegap-version" value="cli-6.0.0" /></platform>
    <preference name="android-minSdkVersion" value="15" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="fullscreen" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="autorotate" value="false" readonly="true" />
    <preference name="target-device" value="universal" />
    <preference name="backgroundcolor" value="0xffffffff" />
    <feature name="WebViewColor"><param name="ios-package" value="WebViewColor" /></feature>

    <!-- OTHER PREFERENCES -->
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="detect-data-types" value="false" />
    <preference name="stay-in-webview" value="false" />
    <preference name="exit-on-suspend" value="false" />

    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="1000" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="SplashScreenBackgroundColor" value="#ffffff" />
    <preference name="FadeSplashScreenDuration" value="500" />
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="ShowSplashScreenSpinner" value="false" />

    <preference name="EnableViewportScale" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="AllowInlineMediaPlayback" value="true" />

    <!-- CORE PLUGINS -->
    <plugin name="cordova-plugin-splashscreen"               source="npm" />
    <plugin name="cordova-plugin-whitelist"                  source="npm" spec="1.0.0" />
    <plugin name="cordova-base64-to-gallery"                 source="npm" />
    <plugin name="cordova.plugins.diagnostic"                source="npm" />
    <plugin name="cordova-plugin-inappbrowser"               source="npm" />
    <plugin name="org.crosswalk.engine"                      source="pgb" />
    <plugin name="cordova-plugin-wkwebview"                  source="npm" />

    <!-- CONFIGS -->
    <!--config-file platform="android" parent="/manifest"><application android:largeHeap="true"></application></config-file-->
    <!--config-file platform="ios" parent="CFBundleShortVersionString"><string>0.0.0</string></config-file -->
    <!--config-file platform="ios" parent="CFBundleVersion"><string>0.0.0</string></config-file -->

    <allow-intent href="*" />
    <allow-navigation href="*" />
    <access origin="*" />
    <access origin="cdvfile:*" launch-external="yes" />
    <access origin="content:*" launch-external="yes" />
</widget>